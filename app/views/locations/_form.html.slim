.form-wrapper
  .row
    .col-sm-8.col-sm-offset-2
      = simple_form_for location, validate: true, html: { class: 'form-horizontal', multipart: true }, wrapper: :horizontal_form do |f|
        = f.input :name
        = f.input :address_1
        = f.input :address_2
        = f.input :address_3
        = f.input :city
        = f.input :state
        = f.input :zip
        = f.input :phone_number
        = f.input :geography, label: 'Latitude', input_html: { name: 'geography[:latitude]', value: "#{f.object.geography[:latitude] if f.object.geography?}" }
        = f.input :geography, label: 'Longitude', input_html: { name: 'geography[:longitude]', value: "#{f.object.geography[:longitude] if f.object.geography?}" }
        .row
          .col-sm-12
            = f.submit 'Submit', class: 'btn place-request-service-btn btn-primary pull-right bg-red'

