<% if @service_request.attributes[:location_id].kind_of?(Array) %>
  $('.place-request-service-container .errors').html("Location <%= @service_request.data[:location_id].join(', ') %>")
<% elsif @service_request.attributes[:category_id].kind_of?(Array) %>
  $('.place-request-service-container .errors').html("Category <%= @service_request.data[:category_id].join(', ') %>")
<% elsif @service_request.attributes[:subcategory_id].kind_of?(Array) %>
  $('.place-request-service-container .errors').html("Category <%= @service_request.data[:subcategory_id].join(', ') %>")
<% else %>
  $('.place-request-service-container .errors').html("Soething went wrong please try again. %>")
<% end %>
