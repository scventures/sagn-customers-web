.col-sm-4
  .my-guy-container
    .inverted-circle
    h3.title
      = contractor.business_name
    p.list.content
      = contractor.email
    p.list.content
      = contractor.contact_name
    p.list.content
      = contractor.phone_number
    p.mt20.text-center.footer
      = link_to 'Remove', contractor_path(contractor), method: :delete, data: { confirm: "You want to remove this contractor #{contractor.contact_name}?"}, class: 'btn btn-danger btn-lg'
